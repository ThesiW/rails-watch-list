<%= render 'navbar', list: @list %>
<body>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1525&q=80);">
    <h1 class="mt-3 pt-3 d-flex justify-content-center">Welcome!</h1>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6 offset-md-3">
        <div class="d-flex space-between align-items-center justify-content-between">
          <h2 class="mt-5 mb-5">My Lists</h2>
          <a href="/lists/new">
            <i class="fas fa-film mt-4 p-3 btn">Create a new movie list</i>
          </a>
        </div>

        <div class="cards" >
          <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1572177191856-3cde618dee1f?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjN8fG1vdmllfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60);">
          <p class="d-flex justify-content-center">
            <%= link_to list.name, list_path(list) %>
          </p>
        </div>
        <% end %>
      </div>
  </div>
</body>


